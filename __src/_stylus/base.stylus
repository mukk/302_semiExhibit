// 今回の御三家、topとleftcolumunとmiddlecolumnくん
div#top
	width 1100px
	height 700px
	position: absolute
	margin 0
	top 0
	background-color rgba(255,255,255,0.8)
	/* Permalink - use to edit and share this gradient: http://colorzilla.com/gradient-editor/#ffffff+78,e5e5e5+100&0.8+67,0.8+78,0+100 */
	background  -moz-linear-gradient(top,  rgba(255,255,255,0.8) 0%, rgba(255,255,255,0.8) 78%, rgba(255,255,255,0) 100%); /* FF3.6-15 */
	background  -webkit-linear-gradient(top,  rgba(255,255,255,0.8) 0%,rgba(255,255,255,0.8) 78%,rgba(255,255,255,0) 100%); /* Chrome10-25,Safari5.1-6 */
	background  linear-gradient(to bottom,  rgba(255,255,255,0.8) 0%,rgba(255,255,255,0) 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
	// filter  progid:DXImageTransform.Microsoft.gradient( startColorstr='#ccffffff', endColorstr='#00e5e5e5',GradientType=0 ); /* IE6-9 */
	z-index 15
