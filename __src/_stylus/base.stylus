/* Let's get this party started */
::-webkit-scrollbar
	width: 2px;
 
/* Track */
::-webkit-scrollbar-track
	// -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
	-webkit-border-radius: 5px
	border-radius: 5px
 
/* Handle */
::-webkit-scrollbar-thumb 
	-webkit-border-radius: 8px
	border-radius: 8px
	background: rgba(50,50,50,0.3) 

